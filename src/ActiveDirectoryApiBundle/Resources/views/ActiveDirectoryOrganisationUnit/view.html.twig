{% extends 'AppBundle:Default:items.view.html.twig' %}
    {% block title %} Liste des Unités d'Organisation Active Directory {% endblock %}
    {% block breadcrumb %} Liste des Unités d'Organisation Active Directory {% endblock %}
    {% block corps_table_title %}
        <th class="admin_cat_table_title">Nom du Groupe</th>
        <th class="admin_cat_table_title">Dn du Groupe</th>
    {% endblock %}
    {% block corps_table_cells %}
        {% for item in all %}
            <tr id="generalBtr" data-href="">
                <td class="admin_cat_table_cell">{{ item.name }}</td>
                <td class="admin_cat_table_cell">{{ item.dn }}</td>
                <td class="admin_cat_table_cell_action">
                    <button type="button" class="btn btn-default btn-xs" aria-label="Left Align" title="Editer {{ alert_text }}" onclick="ajaxCoreEdit('{{ entity }}', this.name);" data-toggle="modal" data-target="#modalEdit" id="editForm" name="{{ item.id }}">
                        <span class="glyphicon glyphicon-edit  btn-xs" aria-hidden="true"></span>
                    </button>
                    <a href="{{ path( 'remove_active_directoryorganisation_unit' , { 'itemDelete': item.id}) }}" title="Supprimer {{ alert_text }}" data-confirm="Etes-vous certain de vouloir supprimer {{ alert_text }} ?">
                        <button type="button" class="btn btn-default  btn-xs" aria-label="Left Align">
                            <span class="glyphicon glyphicon-remove  btn-xs" aria-hidden="true"></span>
                        </button>
                    </a>
                </td>
            </tr>
        {% endfor %}
    {% endblock %}

    {% block modal_form %}

        {% embed "ActiveDirectoryApiBundle:ActiveDirectoryOrganisationUnit:add.body.html.twig"  %}
        {% endembed %}

        {% embed "ActiveDirectoryApiBundle:ActiveDirectoryOrganisationUnit:edit.body.html.twig"  %}
        {% endembed %}

    {% endblock %}

    {% block javascripts %}

    {% endblock %}