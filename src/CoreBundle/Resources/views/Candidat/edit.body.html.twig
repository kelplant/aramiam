<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" id="modalEdit">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="{{ path( 'form_exec_edit_candidat' ) }}" method="post" class="form-horizontal" id="form-edit">
                <div class="modal-header">
                    <button type="button" onclick="resetEditItem();" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title font_exo_2" id="myModalLabel">{% if is_archived != "2" %}Edition d'un candidat{% endif %}{% if is_archived == "2" %}Voir un Candidat Transformé{% endif %}</h4>
                </div>
                <div class="modal-body">
                    <div class="main_container" xmlns="http://www.w3.org/1999/html">
                        <input type="hidden" name="formAction" value="edit">
                        {{ form_errors(formEdit) }}
                        <div class="form-group">
                            {{ form_label(formEdit.civilite) }}
                            {{ form_errors(formEdit.civilite) }}
                            <div class="col-sm-8">
                                {% if is_archived == "0" %}{{ form_widget(formEdit.civilite) }}{% endif %}
                                {% if is_archived != "0" %}{{ form_widget(formEdit.civilite, {'attr': {'readonly': 'is_archived' }}) }}{% endif %}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(formEdit.name)  }}
                            {{ form_errors(formEdit.name) }}
                            <div class="col-sm-8">
                                {% if is_archived == "0" %}{{ form_widget(formEdit.name) }}{% endif %}
                                {% if is_archived != "0" %}{{ form_widget(formEdit.name, {'attr': {'readonly': 'is_archived' }}) }}{% endif %}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(formEdit.surname) }}
                            {{ form_errors(formEdit.surname) }}
                            <div class="col-sm-8">
                                {% if is_archived == "0" %}{{ form_widget(formEdit.surname) }}{% endif %}
                                {% if is_archived != "0" %}{{ form_widget(formEdit.surname, {'attr': {'readonly': 'is_archived' }}) }}{% endif %}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(formEdit.startDate) }}
                            {{ form_errors(formEdit.startDate) }}
                            <div class="col-sm-8">
                                {% if is_archived == "0" %}{{ form_widget(formEdit.startDate) }}{% endif %}
                                {% if is_archived != "0" %}{{ form_widget(formEdit.startDate, {'attr': {'readonly': 'is_archived' }}) }}{% endif %}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(formEdit.responsable) }}
                            {{ form_errors(formEdit.responsable) }}
                            <div class="col-sm-8">
                                {% if is_archived == "0" %}{{ form_widget(formEdit.responsable) }}{% endif %}
                                {% if is_archived != "0" %}{{ form_widget(formEdit.responsable, {'attr': {'readonly': 'is_archived' }}) }}{% endif %}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(formEdit.statusPoste) }}
                            {{ form_errors(formEdit.statusPoste) }}
                            <div class="col-sm-8">
                                {% if is_archived == "0" %}{{ form_widget(formEdit.statusPoste) }}{% endif %}
                                {% if is_archived != "0" %}{{ form_widget(formEdit.statusPoste, {'attr': {'readonly': 'is_archived' }}) }}{% endif %}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(formEdit.predecesseur) }}
                            {{ form_errors(formEdit.predecesseur) }}
                            <div class="col-sm-8">
                                {% if is_archived == "0" %}{{ form_widget(formEdit.predecesseur) }}{% endif %}
                                {% if is_archived != "0" %}{{ form_widget(formEdit.predecesseur, {'attr': {'readonly': 'is_archived' }}) }}{% endif %}
                            </div>
                            <div class="align_left">
                               <button type="button" class="btn btn-default btn-xs font_exo_2" aria-label="Left Align" title="Voir" onclick="setViewUtilisateur();" data-toggle="modal" data-target="#modalEdit" id="editForm" name="">
                                    <span class="glyphicon glyphicon-eye-open btn-xs" aria-hidden="true"></span>
                                </button>
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(formEdit.matriculeRH) }}
                            {{ form_errors(formEdit.matriculeRH) }}
                            <div class="col-sm-8">
                                {% if is_archived == "0" %}{{ form_widget(formEdit.matriculeRH) }}{% endif %}
                                {% if is_archived != "0" %}{{ form_widget(formEdit.matriculeRH, {'attr': {'readonly': 'is_archived' }}) }}{% endif %}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(formEdit.entiteHolding) }}
                            {{ form_errors(formEdit.entiteHolding) }}
                            <div class="col-sm-8">
                                {% if is_archived == "0" %}{{ form_widget(formEdit.entiteHolding) }}{% endif %}
                                {% if is_archived != "0" %}{{ form_widget(formEdit.entiteHolding, {'attr': {'readonly': 'is_archived' }}) }}{% endif %}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(formEdit.agence) }}
                            {{ form_errors(formEdit.agence) }}
                            <div class="col-sm-8">
                                {% if is_archived == "0" %}{{ form_widget(formEdit.agence) }}{% endif %}
                                {% if is_archived != "0" %}{{ form_widget(formEdit.agence, {'attr': {'readonly': 'is_archived' }}) }}{% endif %}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(formEdit.service) }}
                            {{ form_errors(formEdit.service) }}
                            <div class="col-sm-8">
                                {% if is_archived == "0" %}{{ form_widget(formEdit.service) }}{% endif %}
                                {% if is_archived != "0" %}{{ form_widget(formEdit.service, {'attr': {'readonly': 'is_archived' }}) }}{% endif %}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(formEdit.fonction) }}
                            {{ form_errors(formEdit.fonction) }}
                            <div class="col-sm-8">
                                {% if is_archived == "0" %}{{ form_widget(formEdit.fonction) }}{% endif %}
                                {% if is_archived != "0" %}{{ form_widget(formEdit.fonction, {'attr': {'readonly': 'is_archived' }}) }}{% endif %}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(formEdit.commentaire) }}
                            {{ form_errors(formEdit.commentaire) }}
                            <div class="col-sm-8">
                                {% if is_archived == "0" %}{{ form_widget(formEdit.commentaire) }}{% endif %}
                                {% if is_archived != "0" %}{{ form_widget(formEdit.commentaire, {'attr': {'readonly': 'is_archived' }}) }}{% endif %}
                            </div>
                        </div>
                        {{ form_row(formEdit.id) }}
                        {{ form_rest(formEdit) }}
                    </div>
                </div>
                {% if is_archived != "2" %}
                    <div class="modal-footer">
                        <button type="button" class="btn btn-warning" data-dismiss="modal" onclick="resetEditItem();">Fermer</button>
                        {% if is_granted("ROLE_SUPER_ADMIN") %}
                            {% if is_archived == "0" %}
                                <input type="submit" class="btn btn-info" name="sendAction" value="Sauver et Transformer">
                            {% endif %}
                        {% endif %}
                        {% if is_granted("ROLE_ADMIN") %}
                            {% if is_archived == "1" %}
                                <input type="hidden" name="isArchived" value="1">
                                <input type="submit" class="btn btn-info" name="sendAction" value="Rétablir">
                            {% endif %}
                        {% endif %}
                        {% if is_archived == "0" %}
                            <input type="submit" class="btn btn-success" name="sendAction" value="Sauvegarder">
                        {% endif %}
                    </div>
                {% endif %}
            </form>
        </div>
    </div>
</div>