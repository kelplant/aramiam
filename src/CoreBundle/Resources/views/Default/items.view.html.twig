                    $('body').append('<div id="dataConfirmModal" class="modal font_exo_2" role="dialog" aria-labelledby="dataConfirmLabel" aria-hidden="true"><div class="modal-dialog font_exo_2"><div class="modal-content font_exo_2"><div class="modal-header font_exo_2"><button type="button" class="close font_exo_2" data-dismiss="modal" aria-hidden="true">×</button><h3 id="dataConfirmLabel">Merci de confirmer</h3></div><div class="modal-body font_exo_2"></div><div class="modal-footer font_exo_2"><button class="btn btn-success font_exo_2" data-dismiss="modal" aria-hidden="true">Non</button><a class="btn btn-danger font_exo_2" id="dataConfirmOK">Oui</a></div></div></div></div>');
                }
                $('#dataConfirmModal').find('.modal-body').text($(this).attr('data-confirm'));
                $('#dataConfirmOK').attr('href', href);
                $('#dataConfirmModal').modal({show:true});

                return false;
            });
        });
    </script>
