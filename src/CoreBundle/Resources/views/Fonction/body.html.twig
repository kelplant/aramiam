{% extends '::base.html.twig' %}
{% block title %} Liste des fonctions {% endblock %}
{% block mainform %}
<div class="container main_container">
    {{ form_start(fonctionForm, {'attr':{'class': 'form-horizontal'}}) }}
    {{ form_errors(fonctionForm) }}
    {% if message is defined %}
        {% if message is not null %}
            <div class="form-group">
                <div class="col-sm-2"></div>
                <div class=" col-sm-8 corp-message-3">
                        {% if code_message > 6666 %}
                            <div class="form-group alert-success corp-message-1">
                                {{ message }}
                            </div>
                        {% endif %}
                        {% if code_message == 1 %}
                            <div class="form-group alert-danger corp-message-1">
                                {{ message }}
                            </div>
                        {% endif %}
                </div>
            </div>
        {% endif %}
    {% endif %}
    <div class="form-group">
        {{ form_label(fonctionForm.name) }}
        {{ form_errors(fonctionForm.name) }}
        <div class="col-sm-8">
            {{ form_widget(fonctionForm.name) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(fonctionForm.shortName) }}
        {{ form_errors(fonctionForm.shortName) }}
        <div class="col-sm-8">
            {{ form_widget(fonctionForm.shortName) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(fonctionForm.nameInCompany) }}
        {{ form_errors(fonctionForm.nameInCompany) }}
        <div class="col-sm-8">
            {{ form_widget(fonctionForm.nameInCompany) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(fonctionForm.nameInOdigo) }}
        {{ form_errors(fonctionForm.nameInOdigo) }}
        <div class="col-sm-8">
            {{ form_widget(fonctionForm.nameInOdigo) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(fonctionForm.nameInSalesforce) }}
        {{ form_errors(fonctionForm.nameInSalesforce) }}
        <div class="col-sm-8">
            {{ form_widget(fonctionForm.nameInSalesforce) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(fonctionForm.nameInZendesk) }}
        {{ form_errors(fonctionForm.nameInZendesk) }}
        <div class="col-sm-8">
            {{ form_widget(fonctionForm.nameInZendesk) }}
        </div>
    </div>
</div>
{% endblock %}
{% block footform %}
    <div class="form-group">
        <div class="col-sm-4"></div>
        <div class="col-sm-1 align_right">
            {{ form_row(fonctionForm.Envoyer) }}
        </div>
        <div class="col-sm-1 align_left">
            {{ form_row(fonctionForm.EnvoyerNouveau) }}
        </div>
    </div>
    {{ form_row(fonctionForm.id) }}
    {{ form_end(fonctionForm) }}
{% endblock %}
