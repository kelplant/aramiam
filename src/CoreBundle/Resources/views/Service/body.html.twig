{% extends '::base.html.twig' %}
{% block title %} Liste des services {% endblock %}
{% block mainform %}
<div class="container main_container">
    {{ form_start(serviceForm, {'attr':{'class': 'form-horizontal'}}) }}
    {{ form_errors(serviceForm) }}
    {% if message is defined %}
        {% if message is not null %}
            <div class="form-group">
                <div class="col-sm-2"></div>
                <div class=" col-sm-8 corp-message-3">
                        {% if code_message == 6669 %}
                            <div class="form-group alert-success corp-message-1">
                                {{ message }}
                            </div>
                        {% endif %}
                        {% if code_message == 1 %}
                            <div class="form-group alert-danger corp-message-1">
                                {{ message }}
                            </div>
                        {% endif %}
                </div>
            </div>
        {% endif %}
    {% endif %}
    <div class="form-group">
        {{ form_label(serviceForm.name) }}
        {{ form_errors(serviceForm.name) }}
        <div class="col-sm-8">
            {{ form_widget(serviceForm.name) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(serviceForm.shortName) }}
        {{ form_errors(serviceForm.shortName) }}
        <div class="col-sm-8">
            {{ form_widget(serviceForm.shortName) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(serviceForm.nameInCompany) }}
        {{ form_errors(serviceForm.nameInCompany) }}
        <div class="col-sm-8">
            {{ form_widget(serviceForm.nameInCompany) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(serviceForm.nameInOdigo) }}
        {{ form_errors(serviceForm.nameInOdigo) }}
        <div class="col-sm-8">
            {{ form_widget(serviceForm.nameInOdigo) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(serviceForm.nameInSalesforce) }}
        {{ form_errors(serviceForm.nameInSalesforce) }}
        <div class="col-sm-8">
            {{ form_widget(serviceForm.nameInSalesforce) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(serviceForm.nameInZendesk) }}
        {{ form_errors(serviceForm.nameInZendesk) }}
        <div class="col-sm-8">
            {{ form_widget(serviceForm.nameInZendesk) }}
        </div>
    </div>
</div>
{% endblock %}
{% block footform %}
    <div class="form-group">
        <div class="col-sm-4"></div>
        <div class="col-sm-1 align_right">
            {{ form_row(serviceForm.Envoyer) }}
        </div>
        <div class="col-sm-1 align_left">
            {{ form_row(serviceForm.EnvoyerNouveau) }}
        </div>
    </div>
    {{ form_row(serviceForm.id) }}
    {{ form_end(serviceForm) }}
{% endblock %}
