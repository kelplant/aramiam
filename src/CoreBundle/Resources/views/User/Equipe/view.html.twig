    <script>
        function ajaxEquipeEdit(viewItem)
        {
            urlajax = "/user/ajax/utilisateur/get/"+viewItem;
            $.ajax({
                url: urlajax, success: function (result) {
                    var frm = $("#formView");
                    var i;
                    for (i in result) {
                        frm.find('[name="utilisateur[' + i + ']"]').val(result[i]);
                    }
                }
            });
        }
    </script>
