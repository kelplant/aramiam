                        </div>
                        <div class="col-sm-6 font_exo_2">
                            <ul class="nav nav-pills navbar-right marginNegABitLeft" id="right-navbar">
                                <li role="presentation" id="gmailToggle" onclick="ajaxGenerateEmail();">
                                    <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                                        Gmail
                                    </a>
                                </li>
                                <li role="presentation" id="odigoToggle" onclick="ajaxGenerateOdigo();">
                                    <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                                        Odigo
                                    </a>
                                </li>
                                <li role="presentation" id="windowsToggle" onclick="ajaxGenerateWindows();">
                                    <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                                        Windows
                                    </a>
                                </li>
                                <li role="presentation" id="salesforceToggle" onclick="ajaxGenerateSalesforce();">
                                    <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                                        Salesf.
                                    </a>
                                </li>
                                <li role="presentation" id="aramisToggle" onclick="ajaxGenerateAramis();">
                                    <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                                        Aramis
                                    </a>
                                </li>
                                <li role="presentation" id="historyToggle" onclick="ajaxGenerateHistory();">
                                    <a href="#" class="pull-right" data-toggle="dropdown"><i class="fa fa-gears"></i></a>
                                </li>
                            </ul>
                            <div class="container actionPart">
                                <div class="history hide" id="createActionHistoryPart"></div>
                                <div class="container hide col-sm-4 text-center" id="loading">
                                    <button type="button" class="btn btn-lg btn-warning"><span class="glyphicon glyphicon-refresh spinning"></span> Loading...</button>
                                </div>
                                <div class="hide container-fluid" id="createActionOdigoPart">
                                </div>
                                <div class="hide container-fluid" id="createActionGmailPart">
                                    <div id="actionGmailList"></div>
                                    <div class="form-group font_exo_2" onclick="showhide();">
                                        <label class="font_exo_2 col-sm-8">
                                            <input class="col-sm-1" type="radio" id="otherMail" name="genEmail">Autre
                                        </label>
                                    </div>
                                    <div class="form-group font_exo_2">
                                        <div class="input-box hide actionPartInput" id="otherEmail">
                                            <input title="Autre Email" class="form-control font_exo_2 " autofocus="autofocus" type="text" name="autreEmail">
                                            <span class="unit">@aramisauto.com</span>
                                        </div>
                                    </div>
                                    <div class="form-group font_exo_2 col-sm-4 align_right">
                                        <input type="submit" class="form-control font_exo_2 btn btn-danger" onclick="ajaxCreateViaAPI();" name="sendaction" id="sendaction" value="Créer sur Gmail">
                                    </div>
                                </div>
                                <div class="hide container-fluid" id="createActionWindowsPart">
                                </div>
                                <div class="hide container-fluid" id="createActionSalesforcePart">
                                </div>
                                <div class="hide" id="createActionAramisPart">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    {% if is_archived != "2" %}
                        <button type="button" class="btn btn-danger" onclick="ajaxSendEmailToSalarieAndInfoRecrut();">
                            <span class="glyphicon glyphicon-envelope"></span> Envoyer Infos aux Responsables
                        </button>
                        <button type="button" class="btn btn-info" onclick="ajaxSendEmailToSalarie();">
                            <span class="glyphicon glyphicon-envelope"></span> Envoyer Infos au Salarié
                        </button>
                        <button type="button" class="btn btn-warning" onclick="resetEditItem();" data-dismiss="modal" data-toggle="modal" data-target="#myModal">
                            <span class="glyphicon glyphicon-remove-circle"></span> Fermer
                        </button>
                        {% if is_granted("ROLE_ADMIN") %}
                            {% if is_archived == "1" %}
                                <input type="hidden" name="isArchived" value="1">
                                <input type="submit" class="btn btn-info" name="sendAction" value="Rétablir">
                            {% endif %}
                        {% endif %}
                        {% if is_archived == "0" %}
                            <button type="submit" class="btn btn-success" name="sendAction" value="Sauvegarder">
                                <span class="glyphicon glyphicon-floppy-save"></span> Sauvegarder
                            </button>
                        {% endif %}
                    {% endif %}
