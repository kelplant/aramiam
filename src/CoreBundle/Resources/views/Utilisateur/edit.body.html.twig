                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                                        {% if is_archived == "0" %}{{ form_widget(formEdit.name) }}{% endif %}
                                        {% if is_archived != "0" %}{{ form_widget(formEdit.name, {'attr': {'readonly': 'is_archived','disabled':'disabled' }}) }}{% endif %}
