                                {{ form_errors(formEdit.matriculeRH) }}
                                <div class="col-sm-8">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-barcode fa" aria-hidden="true"></i></span>
                                        {% if is_archived == "0" %}{{ form_widget(formEdit.matriculeRH) }}{% endif %}
                                        {% if is_archived != "0" %}{{ form_widget(formEdit.matriculeRH, {'attr': {'readonly': 'is_archived','disabled':'disabled' }}) }}{% endif %}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(formEdit.entiteHolding) }}
                                {{ form_errors(formEdit.entiteHolding) }}
                                <div class="col-sm-8">
                                    <div class="input-group select2-bootstrap-prepend">
                                        <span class="input-group-addon"><i class="fa fa-home fa" aria-hidden="true"></i></span>
                                        {% if is_archived == "0" %}{{ form_widget(formEdit.entiteHolding) }}{% endif %}
                                        {% if is_archived != "0" %}{{ form_widget(formEdit.entiteHolding, {'attr': {'readonly': 'is_archived','disabled':'disabled' }}) }}{% endif %}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(formEdit.agence) }}
                                {{ form_errors(formEdit.agence) }}
                                <div class="col-sm-8">
                                    <div class="input-group select2-bootstrap-prepend">
                                        <span class="input-group-addon"><i class="fa fa-home fa" aria-hidden="true"></i></span>
                                        {% if is_archived == "0" %}{{ form_widget(formEdit.agence) }}{% endif %}
                                        {% if is_archived != "0" %}{{ form_widget(formEdit.agence, {'attr': {'readonly': 'is_archived','disabled':'disabled' }}) }}{% endif %}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(formEdit.service) }}
                                {{ form_errors(formEdit.service) }}
                                <div class="col-sm-8">
                                    <div class="input-group select2-bootstrap-prepend">
                                        <span class="input-group-addon"><i class="fa fa-home fa" aria-hidden="true"></i></span>
                                        {% if is_archived == "0" %}{{ form_widget(formEdit.service) }}{% endif %}
                                        {% if is_archived != "0" %}{{ form_widget(formEdit.service, {'attr': {'readonly': 'is_archived','disabled':'disabled' }}) }}{% endif %}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(formEdit.fonction) }}
                                {{ form_errors(formEdit.fonction) }}
                                <div class="col-sm-8">
                                    <div class="input-group select2-bootstrap-prepend">
                                        <span class="input-group-addon"><i class="fa fa-support fa" aria-hidden="true"></i></span>
                                        {% if is_archived == "0" %}{{ form_widget(formEdit.fonction) }}{% endif %}
                                        {% if is_archived != "0" %}{{ form_widget(formEdit.fonction, {'attr': {'readonly': 'is_archived','disabled':'disabled' }}) }}{% endif %}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(formEdit.commentaire) }}
                                {{ form_errors(formEdit.commentaire) }}
                                <div class="col-sm-8">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-comment fa" aria-hidden="true"></i></span>
                                        {% if is_archived == "0" %}{{ form_widget(formEdit.commentaire) }}{% endif %}
