                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-lock fa" aria-hidden="true"></i></span>
                                        {% if is_archived == "0" %}{{ form_widget(formEdit.mainPassword) }}{% endif %}
                                        {% if is_archived != "0" %}{{ form_widget(formEdit.mainPassword, {'attr': {'readonly': 'is_archived','disabled':'disabled' }}) }}{% endif %}
                                    </div>
                                </div>
