                                    {% if is_archived != "0" %}{{ form_widget(formEdit.commentaire, {'attr': {'readonly': 'is_archived' }}) }}{% endif %}
                                </div>
                            </div>
                            {{ form_row(formEdit.id) }}
                            {{ form_row(formEdit.idCandidat) }}
                            {{ form_row(formEdit.isCreateInGmail) }}
                            {{ form_row(formEdit.isCreateInOdigo) }}
                            {{ form_row(formEdit.isCreateInRobusto) }}
                            {{ form_row(formEdit.isCreateInSalesforce) }}
                            {{ form_row(formEdit.isCreateInWindows) }}
                        </div>
                        <div class="col-sm-5 font_exo_2">
                            <ul class="nav nav-pills navbar-right marginNegABitLeft">
                                <li role="presentation" id="gmailToggle" onclick="ajaxGenerateEmail();">
                                    <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                                        Gmail
                                    </a>
                                </li>
                                <li role="presentation" id="odigoToggle" onclick="ajaxGenerateOdigo();">
                                    <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                                        Odigo
                                    </a>
                                </li>
                                <li role="presentation" id="windowsToggle" onclick="ajaxGenerateWindows();">
                                    <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                                        Windows
                                    </a>
                                </li>
                                <li role="presentation" id="salesforceToggle" onclick="ajaxGenerateSalesforce();">
                                    <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                                        Salesf.
                                    </a>
                                </li>
                                <li role="presentation" id="aramisToggle" onclick="ajaxGenerateAramis();">
                                    <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                                        Aramis
                                    </a>
                                </li>
                            </ul>
                            <div class="container actionPart marginNegABitLeft">
                                <div class="container hide col-sm-4 text-center" id="loading">
                                    <button type="button" class="btn btn-lg btn-warning"><span class="glyphicon glyphicon-refresh spinning"></span> Loading...</button>
                                </div>
                                <div class="hide" id="createActionOdigoPart">
                                    <div class="form-group font_exo_2">
                                        <label class="font_exo_2 col-sm-4">Identifiant :
                                            <input type="text" name="prosodie[identifiant]" id="prosodie_identifiant" class="form-control">
                                        </label>
                                    </div>
                                    <div class="form-group font_exo_2" id="prosodieListe"></div>
                                    <div class="form-group font_exo_2" id="orangeliste"></div>
                                    <div class="form-group font_exo_2 hide" id="otherNumField">
                                        <label class="font_exo_2 col-sm-4">Autre Numéro :
                                            <input type="text" name="prosodie[autreNum]" id="prosodie_autreNum" class="form-control">
                                        </label>
                                    </div>
                                    <div class="form-group font_exo_2 col-sm-4 align_right">
                                        <input type="submit" class="form-control font_exo_2 btn btn-danger" onclick="ajaxCreateViaAPI();" name="sendaction" id="sendaction" value="Créer sur Odigo">
                                    </div>
                                </div>
                                <div class="hide" id="createActionGmailPart">
                                    <div id="actionGmailList"></div>
                                    <div class="form-group font_exo_2" onclick="showhide();">
                                        <label class="font_exo_2 col-sm-3">
                                            <input class="col-sm-2" type="radio" id="otherMail" name="genEmail">Autre
                                        </label>
                                    </div>
                                    <div class="form-group font_exo_2">
                                        <div class="input-box hide actionPartInput" id="otherEmail">
                                            <input title="Autre Email" class="form-control font_exo_2 " autofocus="autofocus" type="text" name="autreEmail">
                                            <span class="unit">@aramisauto.com</span>
                                        </div>
                                    </div>
                                    <div class="form-group font_exo_2 col-sm-4 align_right">
                                        <input type="submit" class="form-control font_exo_2 btn btn-danger" onclick="ajaxCreateViaAPI();" name="sendaction" id="sendaction" value="Créer sur Gmail">
                                    </div>
                                </div>
                                <div class="hide" id="createActionWindowsPart">
                                    <div class="form-group font_exo_2">
                                        <label class="font_exo_2 col-sm-4">Identifiant :
                                            <input type="text" name="windows[identifiant]" id="windows_identifiant" class="form-control">
                                        </label>
                                    </div>
                                    <div class="form-group font_exo_2 col-sm-4 align_right">
                                        <input type="submit" class="form-control font_exo_2 btn btn-danger" onclick="ajaxCreateViaAPI();" name="sendaction" id="sendaction" value="Créer Session Windows">
                                    </div>
                                </div>
                                <div class="hide" id="createActionSalesforcePart">
                                </div>
                                <div class="hide" id="createActionAramisPart">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    {% if is_archived != "2" %}
                        <button type="button" class="btn btn-warning" onclick="resetEditItem();" data-dismiss="modal" data-toggle="modal" data-target="#myModal">Fermer</button>
                        {% if is_granted("ROLE_ADMIN") %}
                            {% if is_archived == "1" %}
                                <input type="hidden" name="isArchived" value="1">
                                <input type="submit" class="btn btn-info" name="sendAction" value="Rétablir">
                            {% endif %}
                        {% endif %}
                        {% if is_archived == "0" %}
                            <input type="submit" class="btn btn-success" name="sendAction" value="Sauvegarder">
                        {% endif %}
                    {% endif %}
                </div >
            </div>
        </div>
    </form>
</div>




