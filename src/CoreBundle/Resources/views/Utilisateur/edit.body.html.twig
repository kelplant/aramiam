                                        {% if is_archived == "0" %}{{ form_widget(formEdit.surname) }}{% endif %}
                                        {% if is_archived != "0" %}{{ form_widget(formEdit.surname, {'attr': {'readonly': 'is_archived','disabled':'disabled' }}) }}{% endif %}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(formEdit.viewName) }}
                                {{ form_errors(formEdit.viewName) }}
