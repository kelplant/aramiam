                                    {% if is_archived == "0" %}{{ form_widget(formEdit.startDate) }}{% endif %}
                                    {% if is_archived != "0" %}{{ form_widget(formEdit.startDate, {'attr': {'readonly': 'is_archived' }}) }}{% endif %}
                                </div>
