                                    <button type="button" onclick="generatePassword('form-edit');" class="btn btn-default" title="Générer un Password">
                                        <span class="glyphicon glyphicon-refresh" aria-hidden="true"></span>
                                    </button>
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(formEdit.startDate) }}
                                {{ form_errors(formEdit.startDate) }}
                                <div class="col-sm-8">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-calendar fa" aria-hidden="true"></i></span>
                                        {{ form_widget(formEdit.startDate, {'attr': {'class' : 'form-control date font_exo_2', 'readonly': true,'disabled':'disabled' }}) }}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(formEdit.responsable) }}
                                {{ form_errors(formEdit.responsable) }}
                                <div class="col-sm-8">
                                    <div class="input-group select2-bootstrap-prepend">
                                        <span class="input-group-addon"><i class="fa fa-user-plus fa" aria-hidden="true"></i></span>
                                        {% if is_archived == "0" %}{{ form_widget(formEdit.responsable) }}{% endif %}
                                        {% if is_archived != "0" %}{{ form_widget(formEdit.responsable, {'attr': {'readonly': 'is_archived','disabled':'disabled' }}) }}{% endif %}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
