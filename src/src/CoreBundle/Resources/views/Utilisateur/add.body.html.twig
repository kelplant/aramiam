<div class="modal fade bs-example-modal-lg" role="dialog" aria-labelledby="myLargeModalLabel" id="modalAdd">
    <div class="modal-dialog modal-lg">
        <div class="modal-content modal-lg">
            <form action="{{ path( 'form_exec_add_utilisateur' ) }}" method="post" class="form-horizontal" name="form-add" id="form-add">
                <div class="modal-header modal-lg">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title font_exo_2" id="myModalLabel">Ajout d'un utilisateur</h4>
                </div>
                <div class="modal-body modal-lg">
                    <div class="container-fluid" xmlns="http://www.w3.org/1999/html" id="mainAddForm">
                        <div class="col-sm-6">
                            <input type="hidden" name="formAction" value="add">
                            {{ form_errors(formAdd) }}
                            <div class="form-group">
                                {{ form_label(formAdd.civilite) }}
                                {{ form_errors(formAdd.civilite) }}
                                <div class="col-sm-8">
                                    <div class="input-group select2-bootstrap-prepend">
                                        <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                                        {{ form_widget(formAdd.civilite) }}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(formAdd.name) }}
                                {{ form_errors(formAdd.name) }}
                                <div class="col-sm-8">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                                        {{ form_widget(formAdd.name) }}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(formAdd.surname) }}
                                {{ form_errors(formAdd.surname) }}
                                <div class="col-sm-8">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                                        {{ form_widget(formAdd.surname) }}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(formAdd.viewName) }}
                                {{ form_errors(formAdd.viewName) }}
                                <div class="col-sm-8">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                                        {{ form_widget(formAdd.viewName) }}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(formAdd.email) }}
                                {{ form_errors(formAdd.email) }}
                                <div class="col-sm-8">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-envelope fa" aria-hidden="true"></i></span>
                                        {{ form_widget(formAdd.email) }}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(formAdd.mainPassword) }}
                                {{ form_errors(formAdd.mainPassword) }}
                                <div class="col-sm-6">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-lock fa" aria-hidden="true"></i></span>
                                        {{ form_widget(formAdd.mainPassword) }}
                                    </div>
                                </div>
                                <div class="col-sm-1">
                                    <button type="button" onclick="replaceT('form-add');" class="btn btn-default" title="Voir Password">
                                        <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                                    </button>
                                </div>
                                <div class="col-sm-1">
                                    <button type="button" onclick="generatePassword('form-add');" class="btn btn-default" title="Générer un Password">
                                        <span class="glyphicon glyphicon-refresh" aria-hidden="true"></span>
                                    </button>
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(formAdd.startDate) }}
                                {{ form_errors(formAdd.startDate) }}
                                <div class="col-sm-8">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-calendar fa" aria-hidden="true"></i></span>
                                        {{ form_widget(formAdd.startDate) }}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(formAdd.responsable) }}
                                {{ form_errors(formAdd.responsable) }}
                                <div class="col-sm-8">
                                    <div class="input-group select2-bootstrap-prepend">
                                        <span class="input-group-addon"><i class="fa fa-user-plus fa" aria-hidden="true"></i></span>
                                        {{ form_widget(formAdd.responsable) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                {{ form_label(formAdd.statusPoste) }}
                                {{ form_errors(formAdd.statusPoste) }}
                                <div class="col-sm-8">
                                    <div class="input-group select2-bootstrap-prepend">
                                        <span class="input-group-addon"><i class="fa fa-adjust fa" aria-hidden="true"></i></span>
                                        {{ form_widget(formAdd.statusPoste) }}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group predecesseurBlock" id="predecesseur">
                                {{ form_label(formAdd.predecesseur) }}
                                {{ form_errors(formAdd.predecesseur) }}
                                <div class="col-sm-8">
                                    <div class="input-group select2-bootstrap-prepend">
                                        <span class="input-group-addon"><i class="fa fa-user-plus fa" aria-hidden="true"></i></span>
                                        {{ form_widget(formAdd.predecesseur) }}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(formAdd.matriculeRH) }}
                                {{ form_errors(formAdd.matriculeRH) }}
                                <div class="col-sm-8">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-barcode fa" aria-hidden="true"></i></span>
                                        {{ form_widget(formAdd.matriculeRH) }}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(formAdd.entiteHolding) }}
                                {{ form_errors(formAdd.entiteHolding) }}
                                <div class="col-sm-8">
                                    <div class="input-group select2-bootstrap-prepend">
                                        <span class="input-group-addon"><i class="fa fa-home fa" aria-hidden="true"></i></span>
                                        {{ form_widget(formAdd.entiteHolding) }}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(formAdd.agence) }}
                                {{ form_errors(formAdd.agence) }}
                                <div class="col-sm-8">
                                    <div class="input-group select2-bootstrap-prepend">
                                        <span class="input-group-addon"><i class="fa fa-home fa" aria-hidden="true"></i></span>
                                        {{ form_widget(formAdd.agence) }}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(formAdd.service) }}
                                {{ form_errors(formAdd.service) }}
                                <div class="col-sm-8">
                                    <div class="input-group select2-bootstrap-prepend">
                                        <span class="input-group-addon"><i class="fa fa-home fa" aria-hidden="true"></i></span>
                                        {{ form_widget(formAdd.service) }}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(formAdd.fonction) }}
                                {{ form_errors(formAdd.fonction) }}
                                <div class="col-sm-8">
                                    <div class="input-group select2-bootstrap-prepend">
                                        <span class="input-group-addon"><i class="fa fa-support fa" aria-hidden="true"></i></span>
                                        {{ form_widget(formAdd.fonction) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="col-sm-2 control-label align_right font_exo_2" for="utilisateur_commentaire">
                                    Commentaires
                                </label>
                                {{ form_errors(formAdd.commentaire) }}
                                <div class="col-sm-10">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-comment fa" aria-hidden="true"></i></span>
                                        {{ form_widget(formAdd.commentaire) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{ form_row(formAdd.id) }}
                    {{ form_row(formAdd.idCandidat) }}
                    {{ form_row(formAdd.isCreateInGmail) }}
                    {{ form_row(formAdd.isCreateInOdigo) }}
                    {{ form_row(formAdd.isCreateInRobusto) }}
                    {{ form_row(formAdd.isCreateInSalesforce) }}
                    {{ form_row(formAdd.isCreateInWindows) }}
                    {{ form_rest(formAdd) }}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-warning" data-dismiss="modal">Fermer</button>
                    <input type="submit" class="btn btn-success" id="button_create" value="Créer">
                </div>
            </form>
        </div>
    </div>
</div>